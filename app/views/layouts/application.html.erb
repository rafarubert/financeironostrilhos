<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="content-type" content="text/html; charset=utf-8" />
<title>Standardized by Free CSS Templates</title>
<meta name="keywords" content="" />
<meta name="description" content="" />
<%=stylesheet_link_tag "default"%>
</head>
<body>
<div id="outer">
	<div id="header">
		<h1><a href="#">Standardized</a></h1>
		<h2>by Free CSS Templates</h2>
	</div>
	<div id="menu">
		<ul>
			<li class="first"><%=link_to "Home", "/"%></li>
			<li><a href="#" accesskey="2" title="">About Us</a></li>
			<li><a href="#" accesskey="3" title="">Products</a></li>
			<li><a href="#" accesskey="4" title="">Services</a></li>
			<li><a href="#" accesskey="5" title="">Contact Us</a></li>
		</ul>
	</div>
	<div id="content">
		<div id="primaryContentContainer">
			<div id="primaryContent">
				<%=yield%>
			</div>
		</div>
		<div id="secondaryContent">

			<div class="box boxA">
				<div class="boxContent">
					<% 
						if not logged_in?
						form_tag session_path do -%>
						<div>
							<span>Username:</span>
							<%= text_field_tag 'login', @login , :class=>""%>
							<span>Password:</span>
							<%= password_field_tag 'password', nil, :class=>"text" %>
							<input type="submit" class="button" value="Login" />
							<%=link_to "Register account", "/signup"%>
						</div>
					<% end
                       else %>
					   <ul>
					   		<li><%=link_to "Minhas Contas", accounts_url%></li>
							<li><%=link_to "Movimentações Fixas", accounts_url%></li>
							<li><%=link_to "Movimentações Variadas", accounts_url%></li>
					   		<li><%=link_to "Sair", "/logout"%></li>
					   </ul> 
					   <% end %>
				</div>
			</div>
			<!-- 
			<div class="box boxB">
				<div class="boxContent">
					<form method="post" action="">
						<div>
							<input type="text" class="text" maxlength="32" name="keywords" />
							<input type="submit" class="button" value="Search" />
							<a href="#">Advanced search</a>
						</div>
					</form>
				</div>
			</div>
			-->
			<div class="box">
				<h3>Próximas Prestações a Pagar</h3>
				<div class="boxContent">
					<ul>
						<% @prestacoes_a_pagar.each do |prestacao|%>
							<li><%=prestacao.title%><BR><%=prestacao.day_limit%>/<%=Time.now.strftime("%m")%>/<%=Time.now.strftime("%Y")%></li>
						<% end %>
					</ul>
				</div>
			</div>

			<div class="box">
				<h3>Próximas Prestações a Receber</h3>
				<div class="boxContent">
					<ul>
						<% @prestacoes_a_receber.each do |prestacao|%>
							<li><%=prestacao.title%><BR><%=prestacao.day_limit%>/<%=Time.now.strftime("%m")%>/<%=Time.now.strftime("%Y")%></li>
						<% end %>
					</ul>
				</div>
			</div>

		</div>
		<div class="clear"></div>
	</div>
	<div id="footer">
		<p>Copyright &copy; 2006 Sitename.com. Designed by <a href="http://www.freecsstemplates.org">Free CSS Templates</a></p>
	</div>
</div>
</body>
</html>
